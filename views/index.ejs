<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Country info</title>
    <link rel="stylesheet" href="libs/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/main.css">
</head>
<body>
<div class="container">
    <div class="selectCountryFormWrap mt-3 p-3">
        <form action="/" method="POST" name="chooseCountry" class="row justify-content-center">

            <% if (countryList !== null) { %>
            <select class="custom-select col-4 mr-2" name="country">
                <% countryList.forEach(element => {
                    if (element.name === 'Estonia') { %>
                    <option value="<%= element.name %>" selected><%= element.name %></option>
                    <% } else { %>
                    <option value="<%= element.name %>"><%= element.name %></option>
            <%} });%>
            </select>
            <button class="btn btn-primary" type="submit">Submit</button>
            <% } %>
        </form>
    </div>
    <!-- /.selectCountryFormWrap -->

    <% if (result === true) { %>
    <h1 class="text-center"><%= countriesResult.name %></h1>
    <table class="table table-hover">
        <tr>
            <th>Name</th>
            <td><%= countriesResult.name %></td>
        </tr>
        <tr>
            <th>Top Level Domanin</th>
            <td><%= countriesResult.topLevelDomain %></td>
        </tr>
        <tr>
            <th>Calling Code</th>
            <td><%= countriesResult.callingCodes %></td>
        </tr>
        <tr>
            <th>Capital</th>
            <td><%= countriesResult.capital %></td>
        </tr>
        <tr>
            <th>Region</th>
            <td><%= countriesResult.region %></td>
        </tr>
        <tr>
            <th>Subregion</th>
            <td><%= countriesResult.subregion %></td>
        </tr>
        <tr>
            <th>Population</th>
            <td><%= countriesResult.population %></td>
        </tr>
        <tr>
            <th>Timezone</th>
            <td><%= countriesResult.timezones %></td>
        </tr>
        <tr>
            <th>Language in a full word in English</th>
            <td><%= countriesResult.languages[0].name %></td>
        </tr>
        <tr>
            <th>Currency code</th>
            <td><%= countriesResult.currencies[0].code %> <%= countriesResult.currencies[0].symbol %></td>
        </tr>
        <tr class="countryFlag">
            <th> Flag </th>
            <td rowspan='2'>
                <img src="<%= countriesResult.flag %>" alt="">
            </td>
        </tr>
    </table>
    <% } %>

</div>
<!-- /.container -->
    <script src="libs/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>